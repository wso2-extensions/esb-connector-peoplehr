<template name="updateNextYearHolidayEntitlement" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="entitlementNextYear" description="The entitlement count for next year."/>
    <parameter name="reasonForChange" description="The reason for updating entitlement."/>
    <parameter name="employeeId" description="The ID of the employee."/>
    <sequence>
        <property name="uri.var.entitlementNextYear" expression="$func:entitlementNextYear"/>
        <property name="uri.var.reasonForChange" expression="$func:reasonForChange"/>
        <property name="uri.var.employeeId" expression="$func:employeeId"/>
        <payloadFactory media-type="json">
            <format>
                {
                    "APIKey": "$1",
                    "Action": "UpdateNextYearHolidayEntitlement",
                    "EmployeeId": "$2",
                    "EntitlementNextYear": "$3",
                    "ReasonForChange": "$4"
                }
            </format>
            <args>
                <arg expression="$ctx:uri.var.apiKey"/>
                <arg expression="$ctx:uri.var.employeeId"/>
                <arg expression="$ctx:uri.var.entitlementNextYear"/>
                <arg expression="$ctx:uri.var.reasonForChange"/>
            </args>
        </payloadFactory>
        <call>
            <endpoint>
                <http method="post" uri-template="{uri.var.apiUrl}/HolidayEntitlements"/>
            </endpoint>
        </call>
        <!-- Remove custom header information in response -->
        <header name="X-AspNet-Version" scope="transport" action="remove"/>
        <header name="X-Powered-By" scope="transport" action="remove"/>
        <header name="Access-Control-Allow-Headers" scope="transport" action="remove"/>
        <header name="Access-Control-Allow-Origin" scope="transport" action="remove"/>
        <header name="Access-Control-Allow-Methods" scope="transport" action="remove"/>
        <header name="Cache-Control" scope="transport" action="remove"/>
    </sequence>
</template>